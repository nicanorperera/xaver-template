<!DOCTYPE html>
<html>
  <head>
    <title><%= @app_name.capitalize %></title>
    <%%= tag :meta, :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" %>
    <%%= tag :meta, :lang => :es, :name => :author, :content => "Xaver" %>
    <%%= tag :meta, :lang => :es, :name => :language, :content => :es %>
    <%%= stylesheet_link_tag :application, :media => :all %>
    <%%= javascript_include_tag :application %>
    <%%= favicon_link_tag %>
    <%%= csrf_meta_tags %>

    <!--[if lt IE 9]>
      <%%= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js" %>
    <![endif]-->
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
          </a>
          <%%= link_to "<%= @app_name.capitalize %>", root_path, :class => :brand %>
          <div class="container nav-collapse">
            <ul class="nav">
              <li><%%= link_to 'Login', login_path if !logged_in? %></li>
              <li><%%= link_to 'Administrar', sesiones_path if  logged_in? %></li>
              <li><%%= link_to 'Contacto', contacto_path  %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <%%= content_tag :section, mensajes_flash, :id => :flash %>
        <%%= yield %>
      </div>

      <footer id="footer">
        <%%= link_to "", "http://www.xaver.com.ar", :class => :xaver, :title => "Xaver soluciones + tecnologÃ­a", :target => :_blank %>
      </footer>

    </div>

  </body>
</html>
